<config>
    <modules>
        <Faonni_CryptoCurrency>
            <version>1.2.2</version>
        </Faonni_CryptoCurrency>
    </modules>
    <global>
        <blocks>
            <faonni_cryptocurrency>
                <class>Faonni_CryptoCurrency_Block</class>
            </faonni_cryptocurrency>
            <adminhtml>
                <rewrite>
					<widget_grid_column_renderer_currency>Faonni_CryptoCurrency_Block_Adminhtml_Widget_Grid_Column_Renderer_Currency</widget_grid_column_renderer_currency>
                </rewrite>
            </adminhtml>			
        </blocks>
        <helpers>
            <faonni_cryptocurrency>
                <class>Faonni_CryptoCurrency_Helper</class>
            </faonni_cryptocurrency>
        </helpers>		
        <models>
            <faonni_cryptocurrency>
                <class>Faonni_CryptoCurrency_Model</class>
				<resourceModel>faonni_cryptocurrency_resource</resourceModel>
            </faonni_cryptocurrency>
            <faonni_cryptocurrency_resource>
                <class>Faonni_CryptoCurrency_Model_Resource</class>	
				<entities>		  
					<address>
						<table>faonni_cryptocurrency_address</table>
					</address>					
				</entities>				
            </faonni_cryptocurrency_resource>		
            <core>
                <rewrite>
                    <store>Faonni_CryptoCurrency_Model_Core_Store</store>
					<locale>Faonni_CryptoCurrency_Model_Core_Locale</locale>
                </rewrite>
            </core>
            <sales>
                <rewrite>
                    <order>Faonni_CryptoCurrency_Model_Sales_Order</order>
                </rewrite>
            </sales>				
            <directory>
                <rewrite>
					<currency_import_webservicex>Faonni_CryptoCurrency_Model_Directory_Import_Webservicex</currency_import_webservicex>
                </rewrite>
            </directory>			
        </models>
        <resources>
            <faonni_cryptocurrency_setup>
                <setup>
                    <module>Faonni_CryptoCurrency</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </faonni_cryptocurrency_setup>
        </resources>			
        <currency>
            <coin>
				<BTC>
					<name>Bitcoin</name>
					<symbol>฿</symbol>
					<position>right</position>
					<network>0x00</network>
					<prefix>0x80</prefix>
					<wif>5</wif>
					<cwif>[LK]</cwif>
					<explorer_model>faonni_cryptocurrency/directory_explorer_blockr</explorer_model>
					<import_model>faonni_cryptocurrency/directory_import_cryptonator</import_model>
				</BTC>
				<LTC>
					<name>Litecoin</name>
					<symbol>Ł</symbol>
					<position>right</position>
					<network>0x30</network>
					<prefix>0xb0</prefix>
					<wif>6</wif>
					<cwif>T</cwif>
					<explorer_model>faonni_cryptocurrency/directory_explorer_blockr</explorer_model>
					<import_model>faonni_cryptocurrency/directory_import_cryptonator</import_model>					
				</LTC>
				<DOGE>
					<name>Dogecoin</name>
					<symbol>Ð</symbol>
					<position>right</position>
					<network>0x1e</network>
					<prefix>0x9e</prefix>
					<wif>6</wif>
					<cwif>Q</cwif>
					<explorer_model>faonni_cryptocurrency/directory_explorer_blockr</explorer_model>
					<import_model>faonni_cryptocurrency/directory_import_cryptonator</import_model>					
				</DOGE>	
				<PPC>
					<name>Peercoin</name>
					<symbol>Ᵽ</symbol>
					<position>right</position>
					<network>0x37</network>
					<prefix>0xb7</prefix>
					<wif>7</wif>
					<cwif>U</cwif>
					<explorer_model>faonni_cryptocurrency/directory_explorer_blockr</explorer_model>
					<import_model>faonni_cryptocurrency/directory_import_cryptonator</import_model>					
				</PPC>	
				<XPM>
					<name>Primecoin</name>
					<symbol>Ψ</symbol>
					<position>right</position>
					<network>0x17</network>
					<prefix>0x97</prefix>
					<wif>6</wif>
					<cwif>P</cwif>
					<explorer_model>faonni_cryptocurrency/directory_explorer_blockr</explorer_model>
					<import_model>faonni_cryptocurrency/directory_import_cryptonator</import_model>					
				</XPM>	
				<DASH>
					<name>Darkcoin/Dash</name>
					<symbol>Dash</symbol>
					<position>right</position>
					<network>0x4c</network>
					<prefix>0xcc</prefix>
					<wif>7</wif>
					<cwif>X</cwif>
					<explorer_model>faonni_cryptocurrency/directory_explorer_blockr</explorer_model>
					<import_model>faonni_cryptocurrency/directory_import_cryptonator</import_model>					
				</DASH>					
            </coin>
        </currency>
		<fieldsets>
            <sales_convert_quote_payment>
                <wallet_address><to_order_payment>*</to_order_payment></wallet_address>
            </sales_convert_quote_payment>
            <sales_convert_order_payment>
                <wallet_address><to_quote_payment>*</to_quote_payment></wallet_address>
            </sales_convert_order_payment>
        </fieldsets>		
		<events>
			<currency_display_options_forming>
				<observers>
					<faonni_cryptocurrency>
						<class>faonni_cryptocurrency/observer</class>
						<method>currency</method>
					</faonni_cryptocurrency>
				</observers>
			</currency_display_options_forming>					
        </events>	
    </global>
    <crontab>
        <jobs>
            <faonni_cryptocurrency_payment_verification>
                <schedule>
                    <cron_expr>*/1 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>faonni_cryptocurrency/cron::paymentVerification</model>
                </run>
            </faonni_cryptocurrency_payment_verification>
        </jobs>
    </crontab>
	<default>
		<payment>
			<cryptocurrency>
				<model>faonni_cryptocurrency/payment_method</model>
				<active>1</active>
				<order_status>pending_payment</order_status>
				<title>Crypto Currency</title>
				<description>Payment description</description>
				<payment_action>authorize_capture</payment_action>
				<allowspecific>0</allowspecific>
				<debug>0</debug>
				<group>online</group>
				<sort_order>20</sort_order>
			</cryptocurrency>
		</payment>
	</default>		
</config>